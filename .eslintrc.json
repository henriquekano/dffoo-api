{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": "off",
        "arrow-parens": "off",
        "function-paren-newline": "off",
        "implicit-arrow-linebreak": "off",
        "no-plusplus": "off",
        "for-direction": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": false
            }
        ]
    }
}
